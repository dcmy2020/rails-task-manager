<h1>My tasks</h1>

<ul id="tasks">
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task.id), target: "_blank" %></li>
  <%= link_to "Delete",
    task_path(task.id),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
  <% end %>

</ul>

<hr>

<%= link_to "Add a new task", new_task_path %>
